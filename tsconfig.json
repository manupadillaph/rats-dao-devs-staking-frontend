{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "paths": {
    "@/*": ["./*"]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/types/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
